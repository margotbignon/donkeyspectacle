{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}

	<div class="calendar-bloc">
		<div class="calendar-wrapper">
			<header>
				<p class="current-date"></p>
				<div class="icons">
					<span id="previous-month" class"material-symbols-rounded"><i class="bi bi-caret-left"></i></span>
					<span id="next-month" class"material-symbols-rounded"><i class="bi bi-caret-right"></i></span>
				</div>
			</header>
			<div class="calendar">
				<ul class="weeks">
					<li>Lun</li>
					<li>Mar</li>
					<li>Mer</li>
					<li>Jeu</li>
					<li>Ven</li>
					<li>Sam</li>
					<li>Dim</li>
				<ul class="days">
				</ul>
			</div>
		</div>
	</div>
    <div class="d-flex flex-row justify-content-center align-items-center flex-wrap mt-5 w-75">
        {% for show in shows %}
            <div class="card shadow me-md-5 mb-5 " style="width: 18rem;">
                <div class="row">
                <img class="card-img-top" src="{{ asset('build/images/' ~ show.media) }}" alt="Card image cap" style="height:250px";>
                    <div class="card-body">
                        <h4 class="card-title text-center text-secondary">{{show.name}}</h4>
                        <h5 class="card-title text-center">{{show.artist.name}}</h5>
                        <p class="card-text text-center">
                            {{ show.events[0].startDate == show.events[0].endDate ? 'Le ' ~ show.events[0].startDate|format_datetime('medium', 'none', locale='fr') : 'Du ' ~ show.events[0].startDate|format_datetime('medium', 'none', locale='fr') ~ ' au ' ~ show.events[0].endDate|format_datetime('medium', 'none', locale='fr') }}
                        </p>
                        <a href="" class="cta-show bg-primary text-decoration-none text-white rounded-bottom d-flex justify-content-center align-items-center">
                            <p class="mt-3">RÃ©server</p>
                        </a>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

    

{% endblock %}
